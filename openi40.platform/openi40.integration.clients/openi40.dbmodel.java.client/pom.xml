<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.openi40.platform.integration</groupId>
		<artifactId>openi40.integration.clients</artifactId>
		<version>00.00.04BC-SNAPSHOT</version>
	</parent>
	<artifactId>openi40.dbmodel.java.client</artifactId>
	<properties>
		<swagger.file>${project.basedir}/swagger/swagger.json</swagger.file>
		<generated-sources-path>${project.basedir}</generated-sources-path>
		<generated-sources-java-path>src/main/java</generated-sources-java-path>
		<version.swagger.codegen>2.4.31</version.swagger.codegen>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.github.joschi.jackson</groupId>
			<artifactId>jackson-datatype-threetenbp</artifactId>
			<version>2.6.4</version>
		</dependency>

	</dependencies>
	<profiles>
		<profile>
			<id>regenerate-api</id>
			<build>
				<plugins>
					<plugin>
						<groupId>io.swagger</groupId>
						<artifactId>swagger-codegen-maven-plugin</artifactId>
						<version>${version.swagger.codegen}</version>
						<configuration>
							<inputSpec>${swagger.file}</inputSpec>
							<configOptions>
								<sourceFolder>${generated-sources-java-path}</sourceFolder>
							</configOptions>
							<output>${generated-sources-path}</output>
						</configuration>
						<executions>
							<execution>
								<id>generate-swagger-angular</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>generate</goal>
								</goals>
								<configuration>
									<language>java</language>
									<library>resttemplate</library>
									<java8>true</java8>
									<dateLibrary>java8</dateLibrary>
									<modelPackage>
										com.openi40.dbmodel.java.client.model</modelPackage>
									<apiPackage>
										com.openi40.dbmodel.java.client.api</apiPackage>
									<invokerPackage>
										com.openi40.dbmodel.java.client.invoker</invokerPackage>
									<additionalProperties>
										java8=true,dateLibrary=legacy,OffsetDateTime=java.time.OffsetDateTime,ngVersion=10.0.6,libraryName=resttemplate</additionalProperties>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>